{% extends 'base.html.twig' %}

{% block title %} BackOffice {% endblock %}

{% block body %}


<div class="container"> 

<h1 class="text-center mt-3 mb-3"> BACKOFFICE </h1>
{% for message in app.flashes('success') %}
    <div class="alert alert-success text-center"> {{ message }}</div>
{% endfor %}
<h1 class="text-center">Création d'un Article
</h1>

<div class=" d-flex flex-column ">
    {{ form_start(formArticles, {
        attr: {
            novalidate: 'novalidate'
        }
    }) }}
    <div class="d-flex flex-column">

    {{ form_row(formArticles.titre) }}
    {{ form_row(formArticles.description) }}
    </div>
    <div class="d-flex flex-column">
    {{ form_row(formArticles.photo) }}
    </div>
    <hr>
    <div class="d-flex flex-column">
    {{ form_row(formArticles.citation) }}
    </div>

    <div style="text-align: center;">
    <button  type="submit" class="boutonConnexion btn text-center"> 
        
        Créer l'article </button>
    </div>
</div>

    
    </button>
    </div>
    {{ form_end(formArticles) }}
</div>


</div>
{% endblock %}