{% extends 'base.html.twig' %}

{% block title %} Mes adresses {% endblock %}

{% block body %}

<div class="container">

    <h1> Mes Adresses </h1>

       <div class="row">
             {% for adress in app.user.adresses %}
            <div class="col-md-4 my-2">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title"> {{ adress.name }} </h5>
                        <p class="card-text"> {{ adress.adress }}, {{ adress.postal }} <br> {{ adress.city }} - {{ adress.country }} </p>
                        <a href="{{ path('edit_adress', {id: adress.id }) }}"> Modifier</a> | <a href="{{ path('delete_adress', {id: adress.id}) }}"> Supprimer </a>
                    </div>
                 </div>
            </div>
            {% endfor %}
       </div>
    <div class="row my-4">
        <div class="col-md-4"> <a href="{{ path('app_account', {id: app.user.id }) }}"> Retour </a> </div>
        <div class="col-md-8"> <a href="{{ path('add_adress', {id: app.user.id }) }}" class="boutonConnexion btn btn-sm float-right"> Ajouter une adresse </a> </div>
        
    </div>
    

</div>
{% endblock %}